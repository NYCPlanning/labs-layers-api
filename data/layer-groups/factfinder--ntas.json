{
  "id": "factfinder--neighborhood-tabulation-areas",
  "layers": [
    {
      "style": {
        "id": "factfinder--neighborhood-tabulation-areas-fill",
        "type": "fill",
        "source": "factfinder--admin-boundaries",
        "source-layer": "neighborhood-tabulation-areas",
        "paint": {
          "fill-opacity": 0.01
        }
      },
      "highlightable": true,
      "clickable": true
    },
    {
      "style": {
        "id": "factfinder--nta-line",
        "type": "line",
        "source": "factfinder--admin-boundaries",
        "source-layer": "neighborhood-tabulation-areas",
        "paint": {
          "line-color": "#444",
          "line-opacity": 0.3,
          "line-width": {
            "stops": [
              [
                11,
                1
              ],
              [
                16,
                3
              ]
            ]
          }
        },
        "layout": {
          "line-join": "round",
          "line-cap": "round"
        }
      }
    },
    {
      "style": {
        "id": "factfinder--nta-label",
        "type": "symbol",
        "source": "factfinder--admin-boundaries",
        "source-layer": "neighborhood-tabulation-areas-centroids",
        "minzoom": 12,
        "paint": {
          "text-color": "#626262",
          "text-halo-color": "#FFFFFF",
          "text-halo-width": 2,
          "text-halo-blur": 2
        },
        "layout": {
          "text-field": "{ntaname}",
          "text-font": [
            "Open Sans Semibold",
            "Arial Unicode MS Bold"
          ],
          "text-size": {
            "stops": [
              [
                11,
                12
              ],
              [
                14,
                16
              ]
            ]
          }
        }
      }
    }
  ]
}
